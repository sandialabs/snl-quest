<MessagePopup>:
    pop_label: pop_label
    title: 'Messages!'

    BoxLayout:
        orientation: 'vertical'
        padding: 10

        PopupLabel:
            id: pop_label
            text: 'No Messages'

        Button:
            size_hint: (1, 0.20)
            text: 'Dismiss'
            on_release: root.dismiss()

<NodeSelectMenu>:
    size_hint: (0.30, 0.80)
    auto_dismiss: False
    node_select_bx: node_select_bx
    node_rv: node_rv

    BoxLayout:
        id: node_select_bx
        orientation: 'vertical'
        spacing: 10
        padding: (25, 10)

        canvas.before:
            Color:
                rgba: C(hex_white)
            Rectangle:
                size: self.size
                pos: self.pos

        TitleTextBase:
            text: 'Select a pricing node.'
            size_hint_y: 0.1
            font_size: large_font

        TextInput:
            size_hint_y: 0.1
            on_text: node_rv.filter_rv_data(self.text)
            hint_text: 'Filter by name'
            multiline: False

        MyRecycleView:
            id: node_rv
            viewclass: 'SingleRunNodeRecycleViewRow'

            SelectableRecycleBoxLayout:
                multiselect: False
                touch_multiselect: False

        TileButton:
            size_hint_y: 0.1
            text: 'Continue'
            on_release: root.dismiss()
