        BoxLayout:
            size_hint_y: 0.05

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'

                WizardPrevButton:
                    id: prev_button
                    on_release:
                        root.manager.transition.duration = BASE_TRANSITION_DUR/2
                        root.manager.transition.direction = 'right'
                        root.manager.current = root.manager.previous()

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'

                WizardNextButton:
                    id: next_button
                    on_release: root._next_screen()
                    disabled: True

