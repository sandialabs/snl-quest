<BatchParamSpinnerOptionCls>:
    font_size: stnd_font
    halign: 'center'
    markup: True
    background_color: C(hex_cloud_dancer)

<BatchParamSpinner>:
    font_size: stnd_font
    background_color: C(hex_primary)
    color: C(hex_white)

<BatchRVEntry>:
    canvas.before:
        Color:
            rgba: C(hex_primary) if self.selected else C(hex_cloud_dancer)
            a: 0.2 if self.selected else 1.0
        Rectangle:
            size: self.size
            pos: self.pos
    name: ''
    Label:
        text: root.name
        color: C(hex_secondary) if root.selected else C(hex_black)
        font_size: stnd_font
        text_size: self.size
        valign: 'middle'
        halign: 'left'
        padding: (10, 10)