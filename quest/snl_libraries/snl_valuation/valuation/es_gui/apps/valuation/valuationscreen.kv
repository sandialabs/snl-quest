<ValuationScreen>:
    run_button: run_button

    GridLayout:
        cols: 2
        padding: 10
        spacing: 10

        GridLayout:
            rows: 2
            padding: 0
            spacing: 10

            GridLayout:
                cols: 2
                padding: 0
                spacing: 10

                MenuTileButton:
                    background_color: C(hex_primary)
                    text: '[font=Modern Pictograms][size=80]K[/size][/font]\nLoad Data'
                    on_release: root.manager.current = 'load_data'

                MenuTileButton:
                    background_color: C(hex_secondary)
                    text: '[font=Modern Pictograms][size=80]5[/size][/font]\nSet Parameters'
                    on_release: root.manager.current = 'set_parameters'

            MenuTileButton:
                id: run_button
                background_color: C(hex_cloud_dancer)
                color: C(hex_black)
                text: '[font=Modern Pictograms][size=80]P[/size][/font]\nRun Optimization'
                on_release: root.open_valuation_run_menu()

